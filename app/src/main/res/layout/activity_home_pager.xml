<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/main_container"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent" android:layout_width="match_parent" >

    <android.support.v4.view.ViewPager
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/toolbar_container">
        <include layout="@layout/toolbar" />

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:textColor="@color/tab_text"
            android:textSize="@dimen/tab_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:background="?attr/colorPrimary"
            app:pstsTabPaddingLeftRight="20dp"
            app:pstsTextColorSelected="@color/white"
            app:pstsIndicatorColor="@color/white" />

    </LinearLayout>
</FrameLayout>
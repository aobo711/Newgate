<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="ToolbarPopup" parent="@style/ThemeOverlay.AppCompat.Light" >
        <item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.System" parent="@style/Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme.Base" parent="@style/Theme.System">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
        <item name="colorAccent">@color/app_accent</item>
    </style>

    <style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton</item>
    </style>
</resources>
